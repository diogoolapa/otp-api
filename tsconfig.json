{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2022",
      "rootDir": "src",
      "outDir": "dist",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["dist","tests","node_modules"]
  }
  